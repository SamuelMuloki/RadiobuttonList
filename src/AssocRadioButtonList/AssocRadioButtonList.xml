<?xml version="1.0" encoding="utf-8" ?>
<widget id="RadioButtonList.widget.AssocRadioButtonList" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Association Radiobutton List</name>
    <description>Creates a radiobutton list which will set an association value</description>

    <icon></icon>

    <properties>
        <property key="dataSourceType" type="enumeration" defaultValue="xpath">
            <caption>Data source type</caption>
            <category>Data source</category>
            <description>The method for retrieving the objects</description>
            <enumerationValues>
                <enumerationValue key="enumeration">Enumeration</enumerationValue>
                <enumerationValue key="xpath">XPath</enumerationValue>
                <enumerationValue key="microflow">Microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="radioListObject" type="entity">
            <caption>Entity to list</caption>
            <category>Data source</category>
        <description>The entity of which the radiobutton list will be composed</description>
        </property>
        <property key="enumerationAttribute" type="attribute">
          <caption>Data source enumeration</caption>
          <category>Data source</category>
          <description>The attribute which has to be rendered as a radiobutton list</description>
          <attributeTypes>
            <attributeType name="Enum"/>
            <attributeType name="Boolean"/>
        </attributeTypes>
        </property>
        <property key="dataSourceMicroflow" type="microflow" required="false">
            <caption>Data source microflow</caption>
            <category>Data source</category>
            <description></description>
            <returnType type="Void"/>
        </property>
        <property key="constraint" type="entityConstraint" required="false" entityProperty="radioListObject">
            <caption>XPath constraint</caption>
            <category>Data source</category>
            <description>Constrain the items to be shown in the radiobutton list</description>
        </property>
        <property key="sortAttribute" type="attribute" entityProperty="radioListObject" required="false">
            <caption>Sort attribute(XPath)</caption>
            <category>Data source</category>
            <description>This field provides the sort attribute of the list</description>
            <attributeTypes>
                <attributeType name="AutoNumber"/>
                <attributeType name="Boolean"/>
                <attributeType name="Currency"/>
                <attributeType name="DateTime"/>
                <attributeType name="Enum"/>
                <attributeType name="Float"/>
                <attributeType name="Integer"/>
                <attributeType name="Long"/>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="showLabel" type="boolean" defaultValue="false">
            <caption>Show Label</caption>
            <category>Display</category>
            <description>Show a label for the field</description>
        </property>
        <property key="fieldCaption" type="translatableString" required="false" multiline="false">
            <caption>Label Caption</caption>
            <category>Display</category>
            <description>C      aption to use for the field</description>
        </property>
        <property key="captionTrue" type="translatableString" required="false">
            <caption>True label (Boolean attribute)</caption>
            <category>Display</category>
            <description>In the case of the target attribute being a boolean, the text for the label can be defined here</description>
        </property>
        <property key="captionFalse" type="translatableString" required="false">
            <caption>False label (Boolean attribute)</caption>
            <category>Display</category>
            <description>In the case of the target attribute being a boolean, the text for the label can be defined here</description>
        </property>
        <property key="sortOrder" type="enumeration" defaultValue="ascending">
            <caption>Sort order(XPath)</caption>
            <category>Data source</category>
            <description>The sort order</description>
            <enumerationValues>
                <enumerationValue key="ascending">Ascending</enumerationValue>
                <enumerationValue key="descending">Descending</enumerationValue>
            </enumerationValues>
        </property>
        <property key="labelAttribute" type="attribute" entityProperty="radioListObject">
            <caption>Label attribute</caption>
            <category>Data source</category>
            <description>The attribute content will be used for the label of the radiobutton</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="associationReference" type="entity" isPath="yes" pathType="reference" allowNonPersistableEntities="true">
            <caption>Association</caption>
            <category>Data source</category>
            <description>Select the reference where the selected item will be saved(Entity must be of the same type as 'Entity to list')</description>
        </property>
        <property key="direction" type="enumeration" defaultValue="vertical">
            <caption>Direction</caption>
            <category>Display</category>
            <description>This field determines the display direction</description>
            <enumerationValues>
                <enumerationValue key="horizontal">Horizontal</enumerationValue>
                <enumerationValue key="vertical">Vertical</enumerationValue>
            </enumerationValues>
        </property>
        <property key="formOrientation" type="enumeration" defaultValue="horizontal">
            <caption>Form orientation</caption>
            <category>Display</category>
            <description>The orientation of the label and checkbox items</description>
            <enumerationValues>
                <enumerationValue key="horizontal">Horizontal</enumerationValue>
                <enumerationValue key="vertical">Vertical</enumerationValue>
            </enumerationValues>
        </property>
        <property key="labelWidth" type="integer" defaultValue="4">
            <caption>Label Width (weight)</caption>
            <category>Display</category>
            <description>The column size of the label control (only applied with horizontal orientation)</description>
        </property>
        <property key="readOnly" type="boolean" defaultValue="false">
            <caption>Read only</caption>
            <category>Display</category>
            <description>If true, the widget is not editable</description>
        </property>
        <property key="onChangeAction" type="microflow" required="false">
            <caption>On change</caption>
            <category>Events</category>
            <description></description>
            <returnType type="Void"></returnType>
        </property>
        <property key="allowDeselect" type="boolean" defaultValue="false">
            <caption>Allow Deselect</caption>
            <category>Events</category>
            <description>Deselecting by clicking on the selected item</description>
        </property>
    </properties>
</widget>
